@model CreditCard.Models.CommonViewModel

@{
    ViewBag.Title = "StoreViewCredtCards";
}

@using (Html.BeginForm("StoreBankCard", "Client", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h3>Create a new account.</h3>

    <hr />

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.CreditCardViewM.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CreditCardViewM.Name, new { requird = "required", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CreditCardViewM.CreditCardNo, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CreditCardViewM.CreditCardNo, new { requird = "required", @type = "number", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CreditCardViewM.CreditCardCVC, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CreditCardViewM.CreditCardCVC, new { requird = "required", @type = "number", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CreditCardViewM.ExpiryDate, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CreditCardViewM.ExpiryDate, new { requird = "required", @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Create" />
        </div>
    </div>
    <br />
    <h4>@ViewBag.Message</h4>
}

<h3>Credit Card List</h3>

@if (Model.CreditCardsList.Count > 0)
{
    for (int i = 0; i < Model.CreditCardsList.Count; i++)
    {
        <div class="row">
            <div class="col-md-2">
                <p>@Model.CreditCardsList[i].Name</p>
            </div>
            <div class="col-md-2">
                <p>@Model.CreditCardsList[i].CreditCardNo</p>
            </div>
            <div class="col-md-2">
                <p>@Model.CreditCardsList[i].CreditCardCVC</p>
            </div>
            <div class="col-md-2">
                @Html.ActionLink("Details", "Details", new { id = @Model.CreditCardsList[i].CreditCardNo })
            </div>
        </div>
    }
}  